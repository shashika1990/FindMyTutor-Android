<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/pureWhite"
    android:elevation="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTutor"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/img_profile_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/labelTutorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:textColor="@color/textDarkGray"
        android:text="Shashika Jayawardene"
        android:textSize="14sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/imgTutor"
        app:layout_constraintStart_toEndOf="@id/imgTutor"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:progressTint="@color/golden"
        android:backgroundTint="@color/textDarkGray"
        android:numStars="5"
        android:rating="1"
        android:max="5"
        android:stepSize="1"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:isIndicator="true"
        android:id="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@id/labelTutorName"
        app:layout_constraintStart_toStartOf="@id/labelTutorName"
        android:layout_width="80dp"
        android:layout_height="20dp" />

    <TextView
        android:textColor="@color/textLightGray"
        android:gravity="center_vertical|end"
        app:layout_constraintTop_toTopOf="@id/ratingBar"
        app:layout_constraintBottom_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toEndOf="@id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:text="20 June, 2020"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        android:id="@+id/txtSubject"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="Automobile Engineering Automobile Engineering Automobile Engineering Automobile Engineering"
        android:textColor="@color/textLightGray" />
    
