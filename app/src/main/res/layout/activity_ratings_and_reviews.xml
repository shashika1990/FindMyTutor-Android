<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/motionLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RatingsAndReviewsActivity"
    app:layoutDescription="@xml/activity_ratings_and_reviews_scene">

    <include android:id="@+id/toolbar" layout="@layout/layout_toolbar_with_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:id="@+id/layoutLeaveReview"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:background="@drawable/background_semitranslucent_dark">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContents"
                android:background="@color/pureWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnClose"
                    android:background="@color/pureWhite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_close_24"/>

                <TextView
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/label1"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_above="@id/ratingBar"
                    android:text="@string/rate_your_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:layout_width="wrap_content"
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:progress="0"
                    android:layout_marginTop="10dp"
                    android:layout_above="@id/editTextReview"
                    android:progressTint="@color/golden"
                    android:isIndicator="false"
                    app:layout_constraintTop_toBottomOf="@id/label1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/ratingBar"
                    android:id="@+id/label2"
                    android:maxLines="1"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_above="@id/ratingBar"
                    android:text="@string/rate_your_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextReview"
                    style="@style/AppTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_above="@id/btnSubmit"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/textHint"
                    android:gravity="start|top"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@id/label2"
                    tools:layout_editor_absoluteX="20dp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextReview" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imgCustomerSatisfaction"
            android:src="@drawable/img_feedback"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationY="60dp"
            app:layout_constraintBottom_toTopOf="@id/layoutContents"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>