<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="lk.fmt.findmytutor.activities.HomeActivity">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imgQuote"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_ladder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:text="@string/sample_quote"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/imgQuote"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="400dp">

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@color/pureWhite"
            android:id="@+id/layoutTution"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/layoutCourses"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/labelTution"
                    android:textAlignment="center"
                    android:text="@string/tution"
                    android:textSize="18dp"
                    android:textColor="@color/textDarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_black_board"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/labelTution"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </RelativeLayout>

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@color/pureWhite"
            android:layout_height="0dp"
            android:id="@+id/layoutCourses"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/labelCourses"
                    android:textAlignment="center"
                    android:text="@string/courses"
                    android:textSize="18dp"
                    android:textColor="@color/textDarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_graduation_hat"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/labelCourses"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>